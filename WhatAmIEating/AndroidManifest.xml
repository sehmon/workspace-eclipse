<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sehmon.whatamieating"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@android:drawable/ic_menu_search"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sehmon.whatamieating.ScanActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sehmon.whatamieating.SingleFoodActivity"
            android:label="@string/title_activity_single_food" >
        </activity>
        <activity
            android:name="com.sehmon.whatamieating.DetailActivity"
            android:label="@string/title_activity_detail" 
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
        </activity>
    </application>

</manifest>
